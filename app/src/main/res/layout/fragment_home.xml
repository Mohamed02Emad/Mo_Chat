<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".presentation.home.HomeFragment">

    <androidx.constraintlayout.motion.widget.MotionLayout
        android:id="@+id/anchor_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gradient_dark_blue"
        app:layoutDescription="@xml/fragment_home_scene"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="17dp"
            android:gravity="center_horizontal"
            tools:text="@string/welcome"
            android:textStyle="bold"
            android:textColor="@color/blue_white"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent" />



        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/btn_edit_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="20dp"
            android:src="@drawable/ic_edit"
            android:background="#0DCFDCFF"
            />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/tv_edit_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="17dp"
            android:background="#0DCFDCFF"
            android:src="@drawable/ic_edit_image" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/btn_logout"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:elevation="18dp"
            android:background="#0DCFDCFF"
            android:src="@drawable/ic_logout"
            app:layout_constraintBottom_toBottomOf="@id/profile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/profile"

            />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/profile"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:elevation="16dp"
            android:scaleType="centerCrop" />

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="4dp"
            android:alpha="0.3"
            android:background="@color/blue_white"
            app:layout_constraintTop_toBottomOf="@id/profile" />

    </androidx.constraintlayout.motion.widget.MotionLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="25dp"
        android:backgroundTint="@color/gradient_light_blue"
        android:contentDescription="@string/add_new_chat"
        app:rippleColor="@color/gradient_dark_blue"
        android:src="@drawable/ic_add_chat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@color/blue_white" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_home"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingStart="16dp"
        android:paddingEnd="66dp"
        android:paddingBottom="16dp"
        android:clipToPadding="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/anchor_view" />

</androidx.constraintlayout.widget.ConstraintLayout>