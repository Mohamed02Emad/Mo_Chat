<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/dialog_corners"
    android:orientation="vertical"
    tools:context=".presentation.dialogs.JoinRoomDialog">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/btn_cancel"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="end"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/ic_cancel"/>
    <TextView
        android:id="@+id/tv_enter_room_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/main_text"
        android:textSize="24sp"
        android:text="@string/enter_room_id"
        android:layout_marginStart="@dimen/corners_space"
        />

    <EditText
        android:id="@+id/et_room_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/corners_space"
        android:layout_marginTop="8dp"
        android:maxLines="1"
        android:layout_marginEnd="@dimen/corners_space"
        android:background="@drawable/app_edit_text"
        android:hint="Enter Room Id"
        android:paddingHorizontal="8dp"
        android:paddingVertical="15dp"
        android:textColor="@color/dark_blue"
        android:textColorHint="@color/dark_blue"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_room_name" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_join"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/app_button"
        android:textSize="16dp"
        android:textColor="@color/blue_white"
        android:text="@string/join"
        android:paddingHorizontal="50dp"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp"
        />
</LinearLayout>